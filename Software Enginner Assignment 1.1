<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Urban Beats | Bar and Family Kitchen</title>
    <link rel="stylesheet" href="styles.css">
    <script defer src="script.js"></script>
</head>
<body>
    <!-- Navigation Bar -->
    <header>
        <nav class="navbar">
            <div class="logo">Urban Beats</div>
            <ul class="nav-links">
                <li><a href="#home">Home</a></li>
                <li><a href="#about">About</a></li>
                <li><a href="#menu">Menu</a></li>
                <li><a href="#gallery">Gallery</a></li>
                <li><a href="#contact">Contact</a></li>
            </ul>
            <input type="text" id="searchBar" placeholder="Search...">
        </nav>
    </header>

    <!-- Hero Section with Background Image -->
    <section id="home" class="hero">
        <div class="hero-text">
            <h1>Welcome to Urban Beats</h1>
            <p>Bar and Family Kitchen</p>
            <a href="#menu" class="btn">Explore Menu</a>
        </div>
    </section>

    <!-- About Section -->
    <section id="about">
        <h2>About Us</h2>
        <p>Urban Beats is your perfect destination for authentic Indian cuisine, combining a lively bar and a cozy family kitchen atmosphere.</p>
        <video controls width="100%">
            <source src="restaurant-tour.mp4" type="video/mp4">
            Your browser does not support the video tag.
        </video>
    </section>

    <!-- Menu with Filters -->
    <section id="menu">
        <h2>Our Menu</h2>
        <select id="filterMenu">
            <option value="all">All</option>
            <option value="veg">Veg</option>
            <option value="non-veg">Non-Veg</option>
            <option value="drinks">Drinks</option>
        </select>
        <div id="menuItems" class="menu-grid">
            <!-- Items loaded with JS -->
        </div>
    </section>

    <!-- Image Gallery -->
    <section id="gallery">
        <h2>Gallery</h2>
        <div class="slider">
            <img src="slide1.jpg" class="slide" alt="Dish 1">
            <img src="slide2.jpg" class="slide" alt="Dish 2">
            <img src="slide3.jpg" class="slide" alt="Ambience">
        </div>
    </section>

    <!-- Contact Form -->
    <section id="contact">
        <h2>Contact Us</h2>
        <form id="contactForm">
            <input type="text" placeholder="Your Name" required>
            <input type="email" placeholder="Email" required>
            <textarea placeholder="Message" required></textarea>
            <button type="submit">Send</button>
        </form>
    </section>

    <!-- Footer -->
    <footer>
        <p>&copy; 2025 Urban Beats. All rights reserved.</p>
        <button id="scrollToTop">Scroll to Top</button>
    </footer>
</body>
</html>

<!-- styles.css -->
<style>
    body { font-family: Arial, sans-serif; margin: 0; padding: 0; }
    .navbar { background-color: #333; color: white; display: flex; justify-content: space-between; padding: 1rem; }
    .nav-links { list-style: none; display: flex; gap: 1rem; }
    .nav-links a { color: white; text-decoration: none; }
    .hero { background-image: url('background.jpg'); background-size: cover; color: white; padding: 5rem 2rem; text-align: center; }
    .btn { background-color: #ff6347; color: white; padding: 0.5rem 1rem; text-decoration: none; border-radius: 5px; }
    section { padding: 2rem; }
    .menu-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem; }
    .slider { display: flex; overflow-x: scroll; gap: 1rem; }
    .slide { width: 300px; height: 200px; object-fit: cover; }
    form input, form textarea { display: block; width: 100%; margin: 0.5rem 0; padding: 0.5rem; }
    footer { background: #222; color: white; text-align: center; padding: 1rem; }
</style>

<!-- script.js -->
<script>
    const menuData = [
        { name: "Paneer Tikka", type: "veg" },
        { name: "Chicken Biryani", type: "non-veg" },
        { name: "Mango Lassi", type: "drinks" },
        { name: "Fish Curry", type: "non-veg" },
        { name: "Veg Pulao", type: "veg" }
    ];

    const menuItems = document.getElementById('menuItems');
    const filterMenu = document.getElementById('filterMenu');

    function displayMenu(type = 'all') {
        menuItems.innerHTML = '';
        const filtered = type === 'all' ? menuData : menuData.filter(item => item.type === type);
        filtered.forEach(item => {
            const div = document.createElement('div');
            div.textContent = item.name;
            div.className = 'menu-item';
            menuItems.appendChild(div);
        });
    }

    filterMenu.addEventListener('change', e => displayMenu(e.target.value));
    window.addEventListener('DOMContentLoaded', () => displayMenu());

    // Scroll to Top
    document.getElementById('scrollToTop').onclick = () => window.scrollTo({ top: 0, behavior: 'smooth' });
</script>
